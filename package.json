{
  "name": "youtube-iina",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit -p tsconfig.plugin.json && tsc --noEmit -p tsconfig.ui.json",
    "build": "bun run build:plugin && bun run build:ui",
    "build:plugin": "bun build src/plugin/main.ts src/plugin/global.ts --outdir xyz.brbc.youtube.iinaplugin/dist --target=browser --format=iife",
    "build:ui": "bun build src/ui/sidebar.ts --outdir xyz.brbc.youtube.iinaplugin/ui/dist --target=browser --format=iife",
    "clean": "rm -rf xyz.brbc.youtube.iinaplugin/dist xyz.brbc.youtube.iinaplugin/ui/dist",
    "sync:root-info": "bun scripts/sync-root-info.js",
    "verify:root-info": "bun scripts/verify-root-info.js"
  },
  "devDependencies": {
    "iina-plugin-definition": "^0.99.3",
    "typescript": "^5.9.3"
  }
}
